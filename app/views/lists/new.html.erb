<div class="form-container">
  <h1>New list</h1>
  <%= simple_form_for @list do |f| %>
    <div class="form-inputs">
      <%= f.input :name, label: "List Name" %>
      <%= f.input :category, label: "Category" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
